
<div class="col-md-6">
    <ul>
        @foreach (var item in ViewBag.roles)
        {
            <li class="alert-secondary border rounded mb-2">
                <div class="row">
                    <div class="col-10">
                        <p>@item.Name</p>
                    </div>
                    <div class="col-2">
                        <a class="btn" href="@Url.Action("DeleteRole", "Home", new { id = item.Id })">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
